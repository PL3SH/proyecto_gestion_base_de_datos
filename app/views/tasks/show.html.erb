<h1>Task: <%= @task.name %></h1>
<p><strong>Description:</strong> <%= @task.description %></p>
<p><strong>Status:</strong> <%= @task.status %></p>
<p><strong>Priority:</strong> <%= @task.priority %></p>
<p><strong>Due date:</strong> <%= @task.due_date %></p>
<p><strong>Project:</strong> <%= link_to @task.project.name, project_path(@task.project) %></p>


<h2>Employers</h2>


<h3>Actions</h3>
<p>change priority of this task<p>
  <%= form_with url: change_priority_project_task_path(@task.project, @task),  method: :patch do |f| %>
   <div>
    <%= f.label :priority %>
    <%= f.select :priority, Task.priorities.keys.map  {|k| [k.humanize, k]}, selected: @task.priority %>
    <%= f.submit "Update priority" %>
  </div>
  <% end %>
  
<div>
 <p> <%= link_to "back to all tasks", project_tasks_path(@task.project) %></p>
 
</div>

