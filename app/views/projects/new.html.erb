<h1>New Project</h1>

<%= form_with model: @project do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.label :start_date %>
    <%= f.date_field :start_date %>
  </div>

  <div>
    <%= f.label :end_date %>
    <%= f.date_field :end_date %>
  </div>

  <div>
    <%= f.label :status %>
    <%= f.select :status, Project.statuses.keys %>
  </div>

  <div>
    <%= f.submit "Create Project" %>
  </div>
<% end %>

<p><%= link_to "Back", projects_path %></p>


